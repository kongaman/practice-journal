<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ck.practicejournal.controller.MainController">

    <Label text="Aktive Ziele:" style="-fx-font-weight: bold;"/>
    <VBox fx:id="goalsContainer" spacing="5">
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="←" onAction="#handlePreviousDay"/>
        <DatePicker fx:id="datePicker"/>
        <Button text="→" onAction="#handleNextDay"/>
        <Button text="Heute" onAction="#handleToday"/>
    </HBox>

    <Label text="Neuer Eintrag:" style="-fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
        <Label text="Dauer (min):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="durationField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Fokusbereich:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="focusCombo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        
        <Button text="Speichern" onAction="#handleSaveEntry" 
                GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Einträge für heute:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="entriesTable"> 
    </TableView>   
</VBox>